source 'http://rubygems.org'

gem 'rails'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'mysql2'
gem 'devise'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'
gem 'therubyracer'
gem "paperclip"

group :test, :development do
  gem 'capistrano'
  gem "factory_girl_rails"
  gem "capybara"
  gem "guard-rspec"
  gem "rspec-rails"
  gem "shoulda-matchers"
  gem 'spork', "> 0.9.0.rc"
  gem "guard-spork"
  gem "launchy"
  gem "pry-remote"
  gem "pry-rails"
end

group :development do
  gem 'letter_opener'
end

