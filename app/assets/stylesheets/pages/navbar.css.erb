#navbar {
	background: url("<%= asset_path("pages/navbar-bg.png") %>") repeat-x;
	border: 1px solid #0094FF;
	width: 960px;
	padding: 0;
	margin: 0;
	display: block;
	height: 34px;
	margin: 10px 0;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	border-radius: 10px;
}
#navbar li {
	float: left;
	list-style: none;
	display: block;
}
li.nav-item a {
	display: block;
	float: left;
	margin: 0px;
	text-decoration: none;
	color: #f0f0f0;
	font: bold 16px Arial, Sans-Serif;
	line-height: 34px;
	height: 32px;
	padding: 0 20px;
	position: relative;
}

.nav-item a:hover {
	color: #fff;
}